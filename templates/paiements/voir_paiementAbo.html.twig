{% extends 'base.html.twig' %}

{% block title %}Détails du paiement{% endblock %}

{% block bandeau %}
    {% include 'bandeau.html.twig' with { title: "Détail d'un paiement" } %}
{% endblock %}

{% block body %}
    <div class="flex flex-col justify-center px-6 py-8 mx-auto w-3/4">

        <div class="w-full bg-content rounded-xl py-16 flex justify-center">

            <div class="p-6 flex flex-col lg:w-3/4 justify-center gap-4 text-gray-700 text-center">
                <h1 class="text-4xl font-bold text-accent">Paiement pour l'abonnement #{{ paiement.abonnementId.id }}</h1>

                <div class="mt-4 space-y-3 text-lg">
                    <p><span class="font-semibold">Date du paiement :</span> {{ paiement.date|date('d-m-Y') }}</p>
                    <p><span class="font-semibold">Montant payé :</span> <span class="text-2xl font-bold text-green-600">{{ paiement.montant }} €</span></p>
                    <p><span class="font-semibold">Abonnement type :</span> {{ paiement.abonnementId.type }}</p>
                </div>
            </div>

        </div>

    </div>
{% endblock %}
