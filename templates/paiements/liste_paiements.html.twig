{% extends 'base.html.twig' %}

{% block title %}Paiements{% endblock %}

{% block body %}
<div class="container bg-content mx-auto p-4 rounded-xl">
    <div class="font-bold bg-header p-2 text-green-200 text-center">
        <h1>Mes paiements de locations</h1>
    </div>
    <div class="flex flex-row font-bold bg-header p-2 border-gray-300 text-center text-green-200">
        <div class="flex-1">Montant</div>
        <div class="flex-1">Date</div>
    </div>
    {% for paiement in paiementsLoc %}
        <a href="{{ path('app_voir_paiement', {'id': paiement.location.id}) }}">
            <div class="flex flex-row items-center p-2 divide-x divide-red-500 hover:bg-row text-center">

                <div class="flex-1 px-2">{{paiement.montant}} €</div>
                <div class="flex-1 px-2">{{paiement.date|date('d/m/Y')}}</div>

            </div>
        </a>
    {% endfor %}
</div>
    <div class="container bg-content mx-auto p-4 rounded-xl">
        <div class="font-bold bg-header p-2 text-green-200 text-center">
            <h1>Mes paiements d'abonnements</h1>
        </div>
        <div class="flex flex-row font-bold bg-header p-2 border-gray-300 text-center text-green-200">
            <div class="flex-1">Montant</div>
            <div class="flex-1">Date</div>
        </div>
        <div class="flex flex-col divide-y divide-row">
            {% for paiement in paiementsAbo %}
                <a href="{{ path('app_voir_paiement_abo', {'id': paiement.abonnementId.id}) }}">
                    <div class="flex flex-row items-center p-2 divide-x hover:bg-row text-center">
                        <div class="flex-1 px-2">{{ paiement.montant }} €</div>
                        <div class="flex-1 px-2">{{ paiement.date|date("d/m/Y") }}</div>
                    </div>
                </a>
            {% else %}
                <div class="flex flex-row items-center p-2">
                    <div class="flex-1 text-center">
                        Vous n'avez pas encore souscrit d'abonnement.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
