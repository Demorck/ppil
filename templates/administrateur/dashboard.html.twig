{% extends 'base.html.twig' %}

{% block title %} Pr√©kar {% endblock %}
{% block bandeau %}
    {% include 'bandeau.html.twig' with { title: "Administrateur" } %}
{% endblock %}

{% block body %}

<div class="flex flex-row justify-around">
    <a href="{{ path('app_admin_ban') }}">
        <button type="submit" class="btn-rainbow hover:cursor-pointer text-xl">Bannir des utilisateurs</button>
    </a>
    <a href="{{ path('app_admin_commission') }}">
        <button type="submit" class="btn-rainbow hover:cursor-pointer text-xl">Changer la commission</button>
    </a>
</div>
    <br><br>
<div class="flex flex-1 items-center flex-col">
    <div class="flex justify-center text-center w-full items-center">
        <div class="hover:cursor-pointer flex flex-1 justify-center" data-id-tab="offres">Offres</div>
        <div class="hover:cursor-pointer flex flex-1 justify-center" data-id-tab="locations">Locations</div>
        <div class="hover:cursor-pointer flex flex-1 justify-center" data-id-tab="users">Utilisateurs</div>
        <div class="hover:cursor-pointer flex flex-1 justify-center" data-id-tab="paiements">Paiements</div>
    </div>
    <div class="w-full">
        <div id="offre_charts" class="flex flex-row justify-between items-center">
            <div class="flex-1/4">
                <canvas id="statsChart"></canvas>
            </div>
            <div class="flex-1/4">
                <canvas id="prix_chart"></canvas>
            </div>
        </div>
        <div id="locations_charts" class="hidden">
            OOOOO
        </div>
        <div id="users_charts" class="hidden">
            UUUU
        </div>
        <div id="paiements_charts" class="hidden">
            PPPPPP
        </div>
    </div>
</div>


<div class="hidden" data-offre-status='{{ stats_month|json_encode|raw }}'></div>
{#<div class="hidden" data-offre-full='{{ stats.total_offres }}'></div>#}
<div class="hidden" data-offre-prix='{{ prix|json_encode|raw }}'></div>
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('app_chart_stats') }}
{% endblock %}