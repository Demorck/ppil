{% extends 'base.html.twig' %}

{% block title %}Hello OffresController!{% endblock %}

{% block body %}
<div class="flex flex-col lg:grid flex-wrap justify-around gap-4 lg:grid-cols-2">
    {% for offre in offres %}
        <div class="flex flex-1 flex-row bg-content p-6 rounded-2xl gap-6">
            <div class="max-h-64 ">
                <a href="{{ path('app_offre', {id: offre.id}) }}">
                {% if offre.vehicule.imageName %}
                    <img src="{{ asset('images/vehicules/' ~ offre.vehicule.imageName) }}" alt="Image de la voiture" class="w-64 aspect-square"/>
                {% else %}
                    <img src="{{ asset('images/default.jpg') }}" alt="Image de la voiture" class="w-64 aspect-square"/>
                {% endif %}
                </a>
            </div>
            <div class="flex flex-col flex-1">
                <div class="flex flex-col flex-1">
                    <a href="{{ path('app_offre', {id: offre.id}) }}">
                        <h1 class="font-bold text-accent-dark text-3xl">{{ offre.vehicule.titre }}</h1>
                    </a>
                    <div><span class="underline font-bold">Marque:</span>&nbsp;{{ offre.vehicule.marque }}</div>
                    <div><span class="underline font-bold">Modèle:</span>&nbsp;{{ offre.vehicule.modele }}</div>
                    <div><span class="underline font-bold">Nombre de place:</span>&nbsp;{{ offre.vehicule.nombrePlace }}</div>
                </div>
                <div class="flex flex-row justify-end">
                    <div class="text-2xl sm:text-5xl lg:text-7xl bg-dark px-4 py-2 text-white">{{ offre.prix }} €</div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}

