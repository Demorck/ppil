{% extends 'base.html.twig' %}

{% block title %}Hello OffresController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    {% for offre in offres %}
        <div>
            <div>
                <img id="vehiculeImage" src="{{ asset('images/default.jpg') }}" alt="Image du véhicule" style="max-width: 150px">
            </div>
            <div>{{ offre.vehicule.marque }}</div>
            <div>{{ offre.vehicule.modele }}</div>
            <div>{{ offre.prix}} €</div>
        </div>
    {% endfor %}
</div>
{% endblock %}
