{% extends 'base.html.twig' %}

{% block title %}Choisir un abonnement{% endblock %}

{% block bandeau %}
    {% include 'bandeau.html.twig' with { title: "Abonnement" } %}
{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-8">
        <h1 class="text-3xl font-bold text-center mb-6">Choisissez un abonnement</h1>

        <div class="bg-white p-6 rounded-lg shadow-md">
            {{ form_start(form) }}

            <div class="mb-6">
                {{ form_label(form.type, 'Abonnement') }}
                <div class="mt-2">
                    {{ form_widget(form.type, {
                        'attr': {
                            'class': 'form-radio text-blue-600'
                        }
                    }) }}
                </div>
            </div>

            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition duration-200">
                Choisir
            </button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}